Global MainWindow

Global WPFrontpageButton, IWPLogo, WPAdminButton, WPPluginsButton, WPThemesButton, MySQLButton, DocsButton, QuitButton, AboutButton

Global Img_MainWindow_0, Img_MainWindow_1, Img_MainWindow_2, Img_MainWindow_3, Img_MainWindow_4, Img_MainWindow_5, Img_MainWindow_6

UseJPEGImageDecoder()
UsePNGImageDecoder()

Img_MainWindow_0 = LoadImage(#PB_Any,"images\logo.png")
Img_MainWindow_1 = LoadImage(#PB_Any,"images\frontpage.jpg")
Img_MainWindow_2 = LoadImage(#PB_Any,"images\admin.jpg")
Img_MainWindow_3 = LoadImage(#PB_Any,"images\plugins.jpg")
Img_MainWindow_4 = LoadImage(#PB_Any,"images\themes.jpg")
Img_MainWindow_5 = LoadImage(#PB_Any,"images\mysql.jpg")
Img_MainWindow_6 = LoadImage(#PB_Any,"images\docs.jpg")

Declare ResizeGadgetsMainWindow()

Declare WPAdminButtonEvent(EventType)
Declare AboutButtonEvent(EventType)
Declare WPFrontpageButtonEvent(EventType)
Declare DocsButtonEvent(EventType)
Declare MySQLButtonEvent(EventType)
Declare WPThemesButtonEvent(EventType)
Declare WPPluginsButtonEvent(EventType)
Declare QuitButtonEvent(EventType)

Procedure OpenMainWindow(x = 0, y = 0, width = 760, height = 420)
  MainWindow = OpenWindow(#PB_Any, x, y, width, height, "", #PB_Window_SystemMenu)
  SetWindowColor(MainWindow, RGB(254,255,255))
  WPFrontpageButton = ButtonImageGadget(#PB_Any, 10, 70, 360, 90, ImageID(Img_MainWindow_1))
  GadgetToolTip(WPFrontpageButton, "Open WordPress Frontpage")
  IWPLogo = ImageGadget(#PB_Any, 10, 10, 398, 51, ImageID(Img_MainWindow_0))
  WPAdminButton = ButtonImageGadget(#PB_Any, 380, 70, 360, 90, ImageID(Img_MainWindow_2))
  GadgetToolTip(WPAdminButton, "Open WordPress Dashboard")
  WPPluginsButton = ButtonImageGadget(#PB_Any, 10, 170, 360, 90, ImageID(Img_MainWindow_3))
  GadgetToolTip(WPPluginsButton, "Open the Plugins folder")
  WPThemesButton = ButtonImageGadget(#PB_Any, 380, 170, 360, 90, ImageID(Img_MainWindow_4))
  GadgetToolTip(WPThemesButton, "Open the Themes folder")
  MySQLButton = ButtonImageGadget(#PB_Any, 10, 270, 360, 90, ImageID(Img_MainWindow_5))
  GadgetToolTip(MySQLButton, "Open MySQL Admin")
  DocsButton = ButtonImageGadget(#PB_Any, 380, 270, 360, 90, ImageID(Img_MainWindow_6))
  GadgetToolTip(DocsButton, "Open IWP documentation")
  QuitButton = ButtonGadget(#PB_Any, 620, 370, 120, 40, "Quit")
  AboutButton = ButtonGadget(#PB_Any, 490, 370, 120, 40, "About")
EndProcedure

Procedure ResizeGadgetsMainWindow()
  Protected FormWindowWidth, FormWindowHeight
  FormWindowWidth = WindowWidth(MainWindow)
  FormWindowHeight = WindowHeight(MainWindow)
  ResizeGadget(MySQLButton, 10, 270, 360, FormWindowHeight - 330)
EndProcedure

Procedure MainWindow_Events(event)
  Select event
    Case #PB_Event_SizeWindow
      ResizeGadgetsMainWindow()
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case WPFrontpageButton
          WPFrontpageButtonEvent(EventType())          
        Case WPAdminButton
          WPAdminButtonEvent(EventType())          
        Case WPPluginsButton
          WPPluginsButtonEvent(EventType())          
        Case WPThemesButton
          WPThemesButtonEvent(EventType())          
        Case MySQLButton
          MySQLButtonEvent(EventType())          
        Case DocsButton
          DocsButtonEvent(EventType())          
        Case QuitButton
          QuitButtonEvent(EventType())          
        Case AboutButton
          AboutButtonEvent(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


